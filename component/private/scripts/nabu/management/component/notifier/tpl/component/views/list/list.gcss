[route=notifierList] {
	.actions {
		text-align: center;
		padding: 10px;
	}
	
	.notification {
		padding: 20px;
		background-color: #fff;
		border: solid 1px #ccc;
		position: absolute;
		top: 10%;
		left: 10%;
		max-height: 80%;
		max-width: 80%;
		overflow: auto;
		
		.key {
			font-weight: bold;
			padding: 10px;
			min-width: 150px;
			text-align: right;
			&:after {
				content: ':';
			}
		}
	}
}